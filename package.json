{
  "name": "s3-artifact-upload",
  "description": "An action to upload files to an S3 bucket",
  "version": "1.0.0",
  "author": "Alex Bern (@usualdesigner)",
  "private": true,
  "homepage": "https://github.com/usualdesigner/s3-artifact-upload",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usualdesigner/s3-artifact-upload.git"
  },
  "bugs": {
    "url": "https://github.com/usualdesigner/s3-artifact-upload/issues"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "TypeScript",
    "AWS",
    "S3"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest",
    "format:write": "prettier --write **/*.{js,ts}",
    "format:check": "prettier --check **/*.{js,ts}",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package:watch": "npm run package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run package",
    "package": "ncc build src/index.ts --license licenses.txt"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@aws-sdk/client-s3": "^3.564.0",
    "mime": "^4.0.7",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^7.13.1",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  }
}
